<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.catFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cat_recycleView"
        app:layout_constraintBottom_toTopOf="@id/cat_addInfo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <Button
        android:id="@+id/cat_addInfo"
        android:layout_width="270dip"
        android:layout_height="55dip"
        android:layout_gravity="center"
        android:layout_marginTop="340dip"
        android:text="add info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/cat_containerForText"
        android:layout_width="0dp"
        android:text="Interesting cat facts"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>